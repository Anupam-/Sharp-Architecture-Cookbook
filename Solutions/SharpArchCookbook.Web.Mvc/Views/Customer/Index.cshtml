@using SharpArchCookbook.Domain;
@using MvcContrib.UI.Grid;

@model IList<Address>
@{
    ViewBag.Title = "Addresses";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

@Html.Grid(Model).Columns(column => 
{
    column.For(x => x.Id);
    column.For(x => x.AddressLine1);
    column.For(x => x.AddressLine2);
    column.For(x => x.City);
    column.For(x => x.StateProvince);
    column.For(x => x.PostalCode);
    column.For(x => (Html.ActionLink<CustomerController>(a => a.ChangeAddress(x.Id), "Edit"))).Named("Edit");
})